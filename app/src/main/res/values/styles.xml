<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="btn_circle_primary">
        <item name="android:background">@drawable/btn_circle_primary</item>
    </style>

    <style name="btn_circle_secondary">
        <item name="android:background">@drawable/btn_circle_secondary</item>
        <item name="android:textColor">#545454</item>
    </style>

    <!-- Login Page -->
    <style name="btn_login_primary">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/btn_outline_dark_primary</item>
        <item name="android:textColor">#97f5f5f5</item>
    </style>

    <style name="txt_login_primary">
        <item name="android:textColor">#97f5f5f5</item>
    </style>

    <!-- Profile Page -->
    <style name="row_profile_primary">
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="label_profile_primary"></style>

    <style name="text_profile_primary">
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <!-- Panic Dialog Box -->
    <style name="btn_panic_dialog_primary">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="card_panic_dialog_primary">
        <item name="android:layout_margin">6dp</item>
    </style>

    <!-- Common -->
    <style name="text_display_1">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
</resources>
