<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="2">

            <android.support.v7.widget.CardView
                android:id="@+id/cardDialogPanicHH"
                style="@style/card_panic_dialog_primary"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <Button
                    android:id="@+id/btnDialogPanicHH"
                    style="@style/btn_panic_dialog_primary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_ambulance_32_color"
                    android:text="Rumah Sakit" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardDialogPanicPP"
                style="@style/card_panic_dialog_primary"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <Button
                    android:id="@+id/btnDialogPanicPP"
                    style="@style/btn_panic_dialog_primary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_police_car_32_color"
                    android:text="Polisi" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardDialogPanicFF"
                style="@style/card_panic_dialog_primary"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <Button
                    android:id="@+id/btnDialogPanicFF"
                    style="@style/btn_panic_dialog_primary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_pickup_32_color"
                    android:text="Pemadam" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardDialogPanicAA"
                style="@style/card_panic_dialog_primary"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <Button
                    android:id="@+id/btnDialogPanicAA"
                    style="@style/btn_panic_dialog_primary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_taxi_32_color"
                    android:text="Anything" />
            </android.support.v7.widget.CardView>

        </GridLayout>
    </RelativeLayout>

</RelativeLayout>