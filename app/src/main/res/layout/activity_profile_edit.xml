<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileEditActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/txtProfileFullname"
            android:hint="Nama Lengkap"
            style="@style/row_profile_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/txtProfileBirthPlace"
            android:hint="Tempat Lahir"
            style="@style/row_profile_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/txtProfileBirth"
            android:hint="Tanggal Lahir"
            android:inputType="date"
            style="@style/row_profile_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/txtProfileAddress"
            android:hint="Alamat Lengkap"
            android:inputType="textLongMessage"
            style="@style/row_profile_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/txtProfileNoKTP"
            android:hint="No KTP"
            android:inputType="number"
            style="@style/row_profile_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:layout_gravity="end"
            android:elevation="12dp"
            android:background="@android:color/white"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_menu_send"
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>